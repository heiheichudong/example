<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".video.MainVideoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_diytexture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="video"
            android:layout_height="wrap_content"
            android:background="@color/tran"/>

        <Button
            android:id="@+id/btn_gpuimage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="video"
            android:layout_height="wrap_content"
            android:background="@color/tran"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_video_btn1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="video"
            android:layout_height="wrap_content"
            android:background="@color/tran"/>

        <Button
            android:id="@+id/main_video_btn2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="video"
            android:layout_height="wrap_content"
            android:background="@color/tran"/>
    </LinearLayout>

    <com.gess.example.widget.TextureVideoView
        android:id="@+id/main_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.gess.example.video.DiyTextureView
        android:id="@+id/diy_tv"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>